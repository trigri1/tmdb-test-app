<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <corners android:radius="0dp" />
            <!--<stroke-->
            <!--android:width="1dp"-->
            <!--android:color="@color/whit_bg_color" />-->
            <gradient
                android:angle="270"
                android:endColor="@color/player_seekbar_base_color"
                android:startColor="@color/player_seekbar_base_color" />
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape android:shape="rectangle">
                <corners android:radius="0dp" />
                <gradient
                    android:angle="270"
                    android:endColor="@color/player_seekbar_buffer_color"
                    android:startColor="@color/player_seekbar_buffer_color" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <corners android:radius="0dp" />
                <gradient
                    android:angle="270"
                    android:endColor="@color/player_seekbar_progress_color"
                    android:startColor="@color/player_seekbar_progress_color" />
            </shape>
        </clip>
    </item>
</layer-list>